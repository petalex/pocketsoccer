<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pair_height"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/pair_padding">

        <TextView
            android:id="@+id/time_minutes"
            style="@style/shadoweffect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/time_semicolon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_semicolon"
            style="@style/shadoweffect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/semicolon_padding"
            android:paddingRight="@dimen/semicolon_padding"
            android:text="@string/semicolon"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/middleGuideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_seconds"
            style="@style/shadoweffect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/time_semicolon"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/middleGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/score1"
            style="@style/shadoweffect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/score_semicolon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/score_semicolon"
            style="@style/shadoweffect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/semicolon_padding"
            android:paddingRight="@dimen/semicolon_padding"
            android:text="@string/semicolon"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/middleGuideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/score2"
            style="@style/shadoweffect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/score_semicolon"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>